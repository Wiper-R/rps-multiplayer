{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalDependencies": [".env"],
  "tasks": {
    "@repo/types#build": {
      "dependsOn": ["@repo/constants#build"]
    },
    "build": {
      "cache": false,
      "persistent": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "db:push": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^db:push"]
    },
    "db:generate": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^db:generate"]
    },
    "db:studio": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^db:studio"]
    },
    "db:reset": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^db:reset"]
    }
  }
}
